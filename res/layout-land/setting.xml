<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="10dip"
    android:gravity="center"
   >
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"        
       android:text="@string/temperature"
       android:textSize="20dp"
       android:textStyle="bold"
       android:gravity="center"
       />
  <LinearLayout
	android:layout_width="match_parent"
	android:layout_height="0dp"
	android:layout_weight="2"
	android:orientation="horizontal">
      
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"       
        android:orientation="vertical"
        android:gravity="center">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"                   
            android:textSize="20sp"
            android:text="@string/coldtemp"
            android:gravity="center"/>

        <NumberPicker
            android:id="@+id/mintpicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    
    </LinearLayout>
     <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
      >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"                 
            android:text="@string/hottemp"
            android:textSize="20sp"
            android:gravity="center"/>

        <NumberPicker
            android:id="@+id/matpicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            />
    
    </LinearLayout>
    </LinearLayout>
    
      <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"        
       android:text="@string/humidity"
       android:textSize="20dp"
       android:textStyle="bold"
       android:gravity="center"
       />
  <LinearLayout
	android:layout_width="match_parent"
	android:layout_height="0dp"
	android:layout_weight="2"
	android:orientation="horizontal">
      
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"       
        android:orientation="vertical"
        android:gravity="center">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"                   
            android:textSize="20sp"
            android:text="@string/dry"
            android:gravity="center"
            />

        <NumberPicker
            android:id="@+id/minhpicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    
    </LinearLayout>
     <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
      >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"                 
            android:text="@string/humid"
            android:textSize="20sp"
            android:gravity="center"/>

        <NumberPicker
            android:id="@+id/maxhpicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            />
    
    </LinearLayout>
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

         <Button
             android:id="@+id/button1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/ok"
             android:onClick="backtoMonitor"
              />
    
    </LinearLayout>
     

</LinearLayout>